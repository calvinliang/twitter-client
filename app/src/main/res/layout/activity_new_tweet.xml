<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.twitterclient.NewTweetActivity">

    <ImageView
        android:id="@+id/ivNewProfile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:longClickable="false"
        android:padding="10dp"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/tvNewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNewName"
        android:layout_toEndOf="@+id/ivNewProfile"
        android:layout_toRightOf="@+id/ivNewProfile"
        android:text="username"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvNewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivNewProfile"
        android:layout_toRightOf="@+id/ivNewProfile"
        android:text="name"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:onClick="onTweet"
        android:text="TWEET" />

    <Button
        android:id="@+id/bCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:maxLength="140"
        android:onClick="onCancel"
        android:text="CANCEL" />

    <EditText
        android:id="@+id/etNewBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bTweet"
        android:layout_alignEnd="@+id/bCancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bCancel"
        android:layout_below="@+id/ivNewProfile"
        android:layout_margin="18dp"
        android:background="#00000000"
        android:gravity="top"
        android:hint="What&apos;s happening?"
        android:maxLength="140" />

    <TextView
        android:id="@+id/tvRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:text="140"
        android:textSize="14dp" />


</RelativeLayout>


